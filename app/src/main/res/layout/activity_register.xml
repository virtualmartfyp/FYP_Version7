<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.captainhumza.fyp_version3.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <TextView
                android:id="@+id/sign_up_welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME TO"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONLINE STORE"
                android:textStyle="italic"
                android:textColor="#fff"
                android:textSize="15dp"
                android:layout_below="@id/sign_up_welcome_text"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:inputType="text"
                        android:id="@+id/register_name"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="Name"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/sign_up_email"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/register_email"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="Email"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:inputType="textEmailAddress"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/register_username"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="User Name"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:inputType="textEmailAddress"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/register_contact"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="Contact   e.g(0000-0000000)"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:inputType="number"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/register_password"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="Password"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:password="true"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/register_confirm_password"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:hint="Confirm Password"
                        android:textStyle="italic"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:background="#fff"
                        android:password="true"
                        android:maxLines="1"
                        android:inputType="textPassword"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14.28"
                    android:layout_marginBottom="10dp">


                        <org.honorato.multistatetogglebutton.MultiStateToggleButton
                            android:id="@+id/mstb_multi_id"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            mstb:values="@array/togglearray"
                            android:layout_centerHorizontal="true"
                            mstb:mstbPrimaryColor="@color/white"
                            mstb:mstbSecondaryColor="@color/Light_Blue"/>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <RelativeLayout
                android:id="@+id/register_register_btn"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#41B3E9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATE ACCOUNT"

                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:onClick="CreateAccount"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
